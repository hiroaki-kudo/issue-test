<h2>写真一覧</h2>
<p><%= notice %></p>
  <div class="container">
    <table>
      <tr class="row">
        <th class="col-md-2">タイトル</th>
        <th class="col-md-2">内容</th>
        <th class="col-md-2">投稿者</th>
        <th class="col-md-2">写真</th>
      </tr>
      <% @pictures.each do |picture| %>
      <tr class="row">
        <td class="col-md-2"><%= picture.title %></td>
        <td class="col-md-2"><%= picture.content %></td>
        <td class="col-md-2"><%= picture.user.name %></td>
        
        <td class="col-md-2"><%= link_to '詳細ページを表示', picture_path(picture.id) %></td>
        <td class="col-md-2"><%= link_to '情報を編集する', edit_picture_path(picture.id), data: { confirm: '本当に編集して良いですか？'} %></td>
        <td class="col-md-2"><%= link_to '情報を削除する', picture_path(picture.id), method: :delete, data: { confirm: '本当に編集して良いですか？'} %></td>
      </tr>
      <% end %>
    </table>
  </div>
<%= link_to '新しく写真を投稿する', new_picture_path %>
