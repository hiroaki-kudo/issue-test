<h2>写真一覧</h2>
<p><%= notice %></p>
<table>
  <tr>
    <th>タイトル</th>
    <th>内容</th>
    <th>投稿者</th>
  </tr>
<% @pictures.each do |picture| %>
  <tr>
    <td><%= picture.title %></td>
    <td><%= picture.content %></td>
    <td><%= picture.user.name %></td>
    <td><%= link_to '詳細ページを表示', picture_path(picture.id) %></td>
    <td><%= link_to '情報を編集する', edit_picture_path(picture.id), data: { confirm: '本当に編集して良いですか？'} %></td>
    <td><%= link_to '情報を削除する', picture_path(picture.id), method: :delete, data: { confirm: '本当に編集して良いですか？'} %></td>
  </tr>
<% end %>
</table>
<%= link_to '新しく写真を投稿する', new_picture_path %>
